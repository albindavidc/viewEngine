  <% if (post.comments.length > 0) { %>
    <ul class="list-group">
      <% for (const comment of post.comments) { %>
        <li class="list-group-item">
          <b><%= comment.author %></b> - <%= comment.text %>
        </li>
      <% } %>
    </ul>
  <% } else { %>
    <p>No comments yet.</p>
  <% } %>

